@page "/tests"
@rendermode InteractiveServer

<DebugTargetComponent OnValueChanged="SetInput" />
<DebugButtonComponent Input="@currentValue" />

<ApiKeyInputComponent OnKeyInput="HandleApiKeyInput" />
<DebugButtonComponent Input="@apiKey" />


@code {
    private object? currentValue;
    private string? apiKey;

    private void HandleApiKeyInput(string apiKeyValue)
    {
        apiKey = apiKeyValue;
    }

    private void SetInput(int newValue)
    {
        currentValue = newValue;
    }
}