        <FluentOption Value="NJ">New Jersey</FluentOption>
        <FluentOption Value="NM">New Mexico</FluentOption>
        <FluentOption Value="NY">New York</FluentOption>
        <FluentOption Value="NC">North Carolina</FluentOption>
